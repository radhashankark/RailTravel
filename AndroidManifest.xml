<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shankarlabs.railtravel"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:label="@string/app_name"
            android:name=".RailTravelActivity" >
            
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
		<activity
            android:label="@string/app_name"
            android:name=".ui.PNRStatusActivity" >
            
            <intent-filter >
                <action android:name="com.shankarlabs.railtravel.ui.pnrstatus" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        
		<activity
            android:label="@string/app_name"
            android:name=".ui.AvailabilityActivity" >
            
            <intent-filter >
                <action android:name="com.shankarlabs.railtravel.ui.availability" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        
    </application>

</manifest>