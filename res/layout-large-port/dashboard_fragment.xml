<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_margin="15dp" >

        <Button 
            android:id="@+id/reserveticket"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Reserve Ticket" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
        
        <Button 
            android:id="@+id/pnrstatus"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="PNR Status" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
 
        <Button 
            android:id="@+id/schedule"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Train Schedule" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
        
        <Button 
            android:id="@+id/availability"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Availability" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
    
        <Button 
            android:id="@+id/placeholder5"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Placeholder 5" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
        
        <Button 
            android:id="@+id/placeholder6"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Placeholder 6" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />    
        
        <Button 
            android:id="@+id/placeholder7"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Placeholder 7" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
        
        <Button 
            android:id="@+id/placeholder8"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1"
        	android:text="Placeholder 8" 
        	android:textSize="22dp"
        	android:background="@drawable/button_background" 
        	android:drawableTop="@drawable/ic_home"
        	android:padding="15dp" />
        
    </LinearLayout>

    </ScrollView>
</LinearLayout>